<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content" android:id="@+id/author_text_view"
    android:layout_height="wrap_content" android:text="Author"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:textSize="25dp"
    />

    <TextView
        android:layout_width="fill_parent" android:id="@+id/review_text_view"
        android:layout_height="wrap_content" android:text="Review text"
        android:layout_below="@+id/author_text_view"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>