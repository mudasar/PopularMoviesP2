<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="@string/sort_order_key"
        android:title="@string/pref_title_search_query"
        android:defaultValue="-1"
        android:entries="@array/pref_sort_list_titles"
        android:entryValues="@array/pref_sort_list_values"
        android:summary="@string/setting_sort_summary"
         />

</PreferenceScreen>
